extends layout

block content
  h1=title

  #error
    .ui.negative.message
      i.close.icon
      .header
        OEPS something went wrong.
      p
        #error-message

  .ui.five.column.centered.grid
    .column Date
    .column Location
    .column
    
      form(id='uploadimage', method='post', enctype='multipart/form-data')
        #image_preview
          i#noimage.far.fa-image.falg(style='font-size:48px;')
          img#previewing(src='noimage.png')
            
        #selectimage
          label Select image
          input(id='file', type='file', name='imageupload', required)
          input(type='submit', name='uploadimage', value='Upload Image')
          #loading 
            h4 loading...
          #message
          
    .column Delete
    .column Star 
  
    .row
      .column
    form.ui.form(method='POST' action='')   
      .field
        label(for='text')
        textarea(cols='150', type='text', placeholder='Text  (Nlah Blah) last' name='text' required='true' value=(undefined===entry ? '' : entry) )
      .column
        button.ui.button(type='submit') Submit
  
  if errors 
    ul
      for error in errors
        li!= error.msg
